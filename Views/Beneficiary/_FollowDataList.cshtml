@using FP.Models;
@using System.Data
@using FP.Manager
@{
    FP_DBEntities db = new FP_DBEntities();
    DataTable dt = new DataTable();
    dt = Model;
}
<style>
    table.dataTable thead > tr > th.sorting, table.dataTable thead > tr > th.sorting_asc, table.dataTable thead > tr > th.sorting_desc, table.dataTable thead > tr > th.sorting_asc_disabled, table.dataTable thead > tr > th.sorting_desc_disabled, table.dataTable thead > tr > td.sorting, table.dataTable thead > tr > td.sorting_asc, table.dataTable thead > tr > td.sorting_desc, table.dataTable thead > tr > td.sorting_asc_disabled, table.dataTable thead > tr > td.sorting_desc_disabled {
        padding-right: 0px !important;
    }
</style>
<div class="bg-light rounded h-100 p-4">
    <div class="table-responsive">
        <table class="table table-bordered table-striped" id="tbl">
            <thead class="text-center">
                <tr>
                    <th>Srno.</th>
                    <th>Beneficiary<br /> ID <span class="text-success">(View)</span></th>
                    @if (CommonModel.RoleNameCont.CNRP == MvcApplication.CUser.Role || CommonModel.RoleNameCont.CM == MvcApplication.CUser.Role)
                    {
                        <th>District</th>
                        <th>Block</th>
                    }
                    <th>Cluster</th>
                    <th>Panchayat</th>
                    <th>Village <br />Organization</th>
                    <th>Follow-Up <br />Month</th>
                    <th>Parity</th>
                    <th>Name of<br />Beneficiary</th>
                    <th>@FP.Models.DisplayFollowBFY.Ct</th>
                    <th>@FP.Models.DisplayFollowBFY.Ctusemethod</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (dt.Rows.Count > 0)
                    {
                        int srno = 1;
                        var getcp = db.tbl_BFYFollowup.Where(x => x.ContraceptionId_fk == 2);
                        foreach (DataRow dr in dt.Rows)
                        {
                            var bfyid = Guid.Parse(dr["BpkID"].ToString());
                            var conprnt = getcp.Any(x => x.BFYID_fk == bfyid);
                            <tr>
                                <td class="text-center">@(srno++)</td>
                                <td class="text-center">
                                    <a href="javascript:void(0);" onclick="BFYFollowDataView('@dr["BpkID"]','@dr["FollowupID_pk"]',2)" class="btn btn-success btn-sm"><i class="fa fa-view"></i>@dr["BFYID"]</a>
                                </td>
                                @if (CommonModel.RoleNameCont.CNRP == MvcApplication.CUser.Role || CommonModel.RoleNameCont.CM == MvcApplication.CUser.Role)
                                {
                                    <td class="text-left">@dr["DistrictName"]</td>
                                    <td class="text-left">@dr["Block"]</td>
                                }
                                <td class="text-left">@dr["CLFName"]</td>
                                <td class="text-left">@dr["Panchayat"]</td>
                                <td class="text-left">@dr["VO"]</td>
                                <td class="text-center">@dr["FollowupReportDate"]</td>
                                <td class="text-center">@dr["Parity"]</td>
                                <td class="text-left">@dr["BFYName"]</td>
                                <td class="text-center">@dr["C_Name"]</td>
                                <td class="text-center">@dr["Method_Name"]</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="12" class="text-center"><strong class="text-danger">Record Not Found !!</strong></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>