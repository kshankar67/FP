                $("#CLFValidationDateDiv").show();
                $("#CLFValidationDate").val(CLFValidationDate);
                $("#CLFLeaders").hide();
            } else {
                $("#CLFValidationNo").prop('checked', true);
                $("#CLFValidationDateDiv").hide();
                $("#CLFLeaders").show();
            }
            

